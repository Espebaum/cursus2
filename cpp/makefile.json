{
	// Place your snippets for makefile here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Makefile": {
		"prefix": "make",
		"body": [
		  "NAME = ${TM_FILENAME_BASE}",
		  "CXX = c++",
		  "CXXFLAGS = -Wall -Wextra -Werror -std=c++98 -pedantic-errors -g",
		  "SRCS = main.cpp",
		  "OBJS = $(SRCS:.cpp=.o)",
		  "",
		  "%.o : %.cpp",
		  "\t@echo \"$(YELLOW) *** Generating object files ... *** $(DEFAULT)\"",
		  "\t@$(CXX) $(CXXFLAGS) $< -c",
		  "",
		  "$(NAME) : $(OBJS)",
		  "\t@$(CXX) $(OBJS) $(CXXFLAGS) -o $(NAME)",
		  "\t@echo \"$(GREEN) *** [$(NAME)] Linking Success *** $(DEFAULT)\"",
		  "",
		  "all : $(NAME)",
		  "",
		  "clean : ",
		  "\t@echo \"$(RED) *** Deleting objects ... *** $(DEFAULT)\"",
		  "\t@rm -rf $(OBJS)",
		  "",
		  "fclean : ",
		  "\t@echo \"$(RED) *** Deleting executable ... *** $(DEFAULT)\"",
		  "\t@rm -rf $(NAME)",
		  "",
		  "re : fclean",
		  "\t@make all",
		  "\t@echo \"$(GREEN)[$(NAME)] Cleaned and rebuilt everything *** $(DEFAULT)\"",
		  "",
		  ".PHONY = all clean fclean re",
		  "",
		  "# ---------------------------------------------------------------------------#",
		  "#                             Define the colors                              #",
		  "# ---------------------------------------------------------------------------#",
		  "GRAY\t\t=\t\\033[1;30m",
		  "RED\t\t\t=\t\\033[1;31m",
		  "GREEN\t\t=\t\\033[1;32m",
		  "YELLOW\t\t=\t\\033[1;33m",
		  "BLUE\t\t=\t\\033[1;34m",
		  "MAGENTA\t\t=\t\\033[1;35m",
		  "CYAN\t\t=\t\\033[1;36m",
		  "WHITE\t\t=\t\\033[1;37m",
		  "DEFAULT\t\t=\t\\033[1;0m"
		],
		"description": "Makefile"
	  }
}
